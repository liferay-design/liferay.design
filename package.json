{
	"csfConfig": {
		"js": {
			"lint": {
				"parserOptions": {
					"ecmaVersion": 7
				},
				"rules": {
					"csf-sort-props": [
						2,
						{
							"casesensitive": true
						}
					],
					"no-unknown-property": 0
				}
			}
		},
		"path:**/{client/**/*,*.js}": {
			"js": {
				"lint": {
					"globals": {
						"RC": true
					}
				}
			}
		},
		"path:**/{node/**/*,*.js}": {
			"js": {
				"lint": {
					"globals": {
						"requireRoot": true
					},
					"rules": {
						"no-console": 0,
						"no-debugger": 0
					}
				}
			}
		}
	},
	"dependencies": {
		"aphrodite": "^1.2.5",
		"cross-env": "^5.1.3",
		"express": "^4.16.2",
		"immutable": "^4.0.0-rc.9",
		"moment": "^2.20.1",
		"prop-types": "^15.6.0",
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"react-responsive": "^4.0.3",
		"react-router-dom": "^4.2.2",
		"react-router-hash-link": "^1.1.1",
		"react-svg": "^2.2.6"
	},
	"description": "Liferay Design Site",
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-eslint": "^8.0.1",
		"babel-loader": "^7.1.2",
		"babel-plugin-transform-export-extensions": "^6.22.0",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"babel-preset-react": "^6.24.1",
		"babel-preset-react-optimize": "^1.0.1",
		"clean-webpack-plugin": "^0.1.17",
		"copyfiles": "^1.2.0",
		"css-loader": "^0.28.7",
		"eslint": "^4.10.0",
		"eslint-config-prettier": "^2.6.0",
		"eslint-plugin-import": "^2.8.0",
		"eslint-plugin-prettier": "^2.3.1",
		"eslint-plugin-react": "^7.4.0",
		"file-loader": "^1.1.5",
		"husky": "^0.14.3",
		"lint-staged": "^4.3.0",
		"node-sass": "^4.5.3",
		"nodemon": "^1.12.1",
		"prettier": "^1.7.4",
		"prettier-eslint-cli": "^4.4.0",
		"react-error-boundary": "^1.2.0",
		"react-hot-loader": "^3.1.3",
		"sass-loader": "^6.0.6",
		"style-loader": "^0.19.0",
		"url-loader": "^0.6.2",
		"webpack": "^3.10.0",
		"webpack-dev-server": "^2.9.7"
	},
	"engines": {
		"node": ">=9.2.1"
	},
	"homepage": "https://github.com/liferay/liferay-portal-ee",
	"main": "./app.js",
	"name": "liferay-design",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/liferay/liferay-portal-ee.git"
	},
	"scripts": {
		"build": "npm run build:copy && cross-env NODE_ENV=production webpack",
		"build:copy": "copyfiles -u 2 client/public/images/**/* client/public/images/* client/dist",
		"start": "npm run build && node app",
		"dev": "cross-env NODE_ENV=development webpack-dev-server --content-base ./client",
		"format": "prettier-eslint --write \"client/src/**/*.js\"",
		"lint-staged": "lint-staged",
		"precommit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,json,scss}": ["prettier --write --config .prettierrc", "git add"]
	},
	"version": "1.0.0"
}
